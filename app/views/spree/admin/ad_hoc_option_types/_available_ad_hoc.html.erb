<% if @available_option_types.any? %>
  <table class="table" id='available_ad_hoc_option_types' data-hook>
    <thead>
      <tr data-hook="available_ad_hoc_option_types_header">
        <th><%= I18n.t("spree.name") %></th>
        <th><%= I18n.t("spree.presentation") %></th>
        <th class="actions"></th>
      </tr>
    </thead>
    <tbody>
      <% @available_option_types.each do |available_option_type| %>
        <tr>
          <td><%= available_option_type.name %></td>
          <td><%= available_option_type.presentation %></td>
          <td class="actions"><%= link_to_with_icon 'plus', '',admin_product_ad_hoc_option_types_path(@product, option_type_id: available_option_type.id), { class: 'btn btn-success btn-sm', method: :create } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>

<% end %>
