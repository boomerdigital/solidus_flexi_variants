<h4><%= Spree.t("add_product_customization_types") %></h4>

<% if @available_product_customization_types.any? %>
  <table class="table" id='available_product_customization_types' data-hook>
    <thead>
      <tr data-hook="available_product_customization_types_header">
        <th><%= Spree.t("name") %></th>
        <th><%= Spree.t("presentation") %></th>
        <th><%= Spree.t("description") %></th>
        <th class="actions"></th>
      </tr>
    </thead>
    <tbody>
      <% @available_product_customization_types.each do |available_product_customization_type| %>
        <tr id="<%= spree_dom_id(available_product_customization_type) %>">
          <td class="name"><%= available_product_customization_type.name %></td>
          <td class='presentation'><%= available_product_customization_type.presentation %></td>
          <td class='description'><%= available_product_customization_type.description %></td>
          <td class="actions actions-1 text-right">
            <%= link_to_with_icon 'plus', '', select_admin_product_product_customization_type_path(@product, available_product_customization_type), remote: true, class: 'btn btn-success btn-sm' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class="alert alert-info no-objects-found">
    <%= Spree.t(:no_resource, resource: Spree::ProductCustomization.model_name.human(count: :other)) %>,
    <%= link_to Spree.t(:add_one), spree.new_admin_product_customization_type_url %>!
  </div>
<% end %>
